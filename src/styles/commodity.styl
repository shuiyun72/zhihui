.search_btn {
  display: flex;
  justify-content: space-between;
  width: 1592px;
  margin: 0 auto;
  padding: 20px 0 6px;
  .right {
    padding-top: 26px;
    .blue {
      color: #35c0c6;
    }
    i {
      background-color: #999;
      color: #fff;
      padding: 2px;
      margin: 0 6px;
      &.is_active {
        background-color: #35c0c6;
      }
    }
  }
  button {
    font-size: 20px;
    padding: 12px 28px;
    &.is_active {
      background-color: #35c0c6;
      color: #fff;
    }
    i {
      margin-left: 6px;
    }
  }
}
.text_info {
  width: 1592px;
  margin: 10px auto 4px;
  padding: 20px;
  color: #666;
  border: 1px solid #eee;
  font-size: 20px;
  display: flex;
  box-sizing: border-box;
  .left {
    width: 360px;
    padding: 10px 0;
  }
  .right {
    span {
      display: inline-block;
      padding: 10px;
      cursor: pointer;
      &.is_active{
        color: #35C0C6;
      }
    }
  }
}
.title_Progress {
  width: 1592px;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  padding-top: 20px;
  .left {
    .el-breadcrumb__item{
        &:last-child{
            .el-breadcrumb__inner{
                font-size: 20px;
                color: #0644eb;
            }
        } 
        .el-breadcrumb__inner.is-link,.el-breadcrumb__separator{
            font-size: 20px;
            color: #0644eb;
        }
        
    }
  }
}
.title_img {
  width: 100%;
  height: 217px;
  background: url("~@assets/img/cimg.png");
}
.commodity {
  background-color: #eee;
  padding: 20px 0;
  .box_item {
    width: 100%;
    .small_goods {
      background-color: #fff;
      margin-left: 10px;
      padding: 7px 0;
      box-sizing: border-box;
      width: 340px;
      justify-content: space-between;
      img {
        width: 162px;
        height: 122px;
      }
      .info {
        margin-top: 30px;
        width: 160px;
        p {
          color: #666666;
          font-size: 14px;
          margin-bottom: 6px;
        }
        .detail {
          width: 100px;
          margin-top: 20px;
          display: flex;
          justify-content: space-between;
          font-size: 10px;
          .money {
            color: #ff0000;
          }
        }
      }
    }
  }
  .commodity_main {
    width: 1592px;
    margin: 0px auto;
    display: flex;
    justify-content: space-between;
    .commodity_main_w_box {
      width: 135px;
      height: 135px;
      background-color: #fff;
    }
  }
}